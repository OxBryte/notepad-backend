{
  "name": "notepad-backend",
  "version": "1.0.0",
  "description": "Backend API for Public Notepad - A decentralized idea sharing platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/cleanup.js && npm run db:setup && npm run db:seed",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
"keywords": [
    "blockchain",
    "web3",
    "nft",
    "ideas",
    "base",
    "ethereum",
    "ipfs",
    "decentralized"
  ],
  "author": "Oxbryte",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "prisma": "^6.11.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  }
}
